{% extends "layout_admin.html.twig" %}

{% block content %}
    <a href="{{url_admin}}addrecipe"><button id="add_recipe" class="btn btn-success">Ajouter une recette</button></a>
    <table id="tableMooc" class="table table-striped table-condensed tablesorter">
        <thead>
          <tr>
            <th>Titre <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></th>
            <th>Type <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></th>
            <th>Date d'ajout <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></th>
            <th>Modifier</th>
            <th>Supprimer</th>
          </tr>
        </thead>
        <tbody>
          {% for recipe in listRecipes %}
          <tr id="{{recipe.id}}">
            <td>{{recipe.nom_recette}}</td>
            <td>{{recipe.type_recette}}</td>
            <td>{{recipe.date_ajout}}</td>
            <td><a href="{{url_admin}}modifyrecipe/{{recipe.id}}"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></a></td>
            <td><a href="{{url_admin}}deleterecipe/{{recipe.id}}" class="red"><span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span></a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
{% endblock %}