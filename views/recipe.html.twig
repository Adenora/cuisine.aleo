{% extends "layout.html.twig" %}

{% block content %}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 article">
            <div class="row">
                <div class="col-lg-12">
                    <h2><a href="{{url}}recette/{{recipe.id}}">{{recipe.nom_recette}}</a></h2>

                    <span class="type{{recipe.id_type_recette}}">{{recipe.nom_type_recette}}</span>
                    <span class="date">Posté le {{recipe.date_ajout}}</span>
                    <span class="comment"><a href="#commentaire">2 commentaires</a></span>

                    <div class="deco-line"></div>

                    <img src="{{recipe.url_photo}}" alt="{{recipe.nom_type_recette}}" class="thumbnail grande-photo" />
                    <div class="deco-line"></div>

                    <p>{{recipe.description}}</p>

                    <dl class="dl-horizontal">
                        <dt>Portions</dt><dd>{{recipe.quantite_recette}} {{recipe.portion}}</dd>
                        <dt>Temps de préparation</dt><dd>{{recipe.duree_prep}} {{recipe.unite_prep}}</dd>
                        <dt>Temps de cuisson</dt><dd>{{recipe.duree_cuisson}} {{recipe.unite_cuisson}}</dd>
                        <dt>Temps d'attente</dt><dd>{{recipe.duree_attente}} {{recipe.unite_attente}}</dd>
                    </dl>

                    <div class="deco-line"></div>

                    <h3>Ingrédients</h3>
                    {% set grp = "" %}
                    {% for ing in listIngredientsRecipe %}
                        {% if grp != "" and grp != ing.nom_grp%}
                            </ul>
                        {% endif %}
                        {% if grp == "" or grp != ing.nom_grp %}
                            <h4>{{ing.nom_grp}}</h4>
                            {% set grp = ing.nom_grp %}
                            <ul>
                        {% endif %}
                            <li>{{ing.quantite}} {{ing.nom_unite}} {{ing.nom_ing}}</li>
                    {% endfor %}
                    </ul>

                    <div class="deco-line"></div>

                    <h3>Instructions</h3>
                    {% set grp = "" %}
                    {% for ins in listInstructionsRecipe %}
                        {% if grp != "" and grp != ins.nom_grp %}
                            </ol>
                        {% endif %}
                        {% if grp == "" or grp != ins.nom_grp %}
                            <h4>{{ins.nom_grp}}</h4>
                            {% set grp = ins.nom_grp %}
                            <ol>
                        {% endif %}
                            <li>{{ins.description}}</li>
                    {% endfor %}
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-lg-offset-3 col-lg-6 article">
            <div class="row">
               <div class="col-lg-12">
                    <h3 id="commentaire">Commentaires</h3>
                </div>
                <div class="col-lg-12">
                    <div class="commentaire">
                        <img src="http://farm5.staticflickr.com/4012/5126739463_e5598d33fb.jpg" alt="">
                        <div class="commentaire-content">
                            <p class="author"><strong>Jack the Ripper</strong> - 10 minutes ago</p>
                            <span>
                                Good day to you and your family good sir. Let me introduce myself. I'm Prince Pullouttamyassa from Nigeria, strangley I still have money I want to send you, but you've never mailed me back...
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="commentaire">
                        <img src="http://farm5.staticflickr.com/4012/5126739463_e5598d33fb.jpg" alt="">
                        <div class="commentaire-content">
                            <p class="author"><strong>Jack the Ripper</strong> - 10 minutes ago</p>
                            <span>
                                Good day to you and your family good sir. Let me introduce myself. I'm Prince Pullouttamyassa from Nigeria, strangley I still have money I want to send you, but you've never mailed me back...
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
      
{% endblock %}